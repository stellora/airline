{
	"name": "@stellora/airline-web",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": "22.12.0",
		"pnpm": "9.15.1"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "concurrently 'PORT=4173 API_SERVER_PORT=4174 vite preview' 'cd ../api-server && PORT=4174 go run .'",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "npm run -s test:e2e && npm run -s test:unit -- --run",
		"test:e2e": "playwright test",
		"test:unit": "vitest",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"gen": "npm run -s gen:openapi",
		"gen:openapi": "openapi-typescript ../api/airline.openapi.yaml --output src/lib/airline.openapi.ts",
		"gen-online:world-map": "DETAIL_LEVEL=high node --experimental-strip-types src/lib/components/maps/generate.ts > src/lib/components/maps/world-high-detail.geojson.json && DETAIL_LEVEL=low node --experimental-strip-types src/lib/components/maps/generate.ts > src/lib/components/maps/world-low-detail.geojson.json && geo2topo --quantization 1e6 world-low-detail=src/lib/components/maps/world-low-detail.geojson.json world-high-detail=src/lib/components/maps/world-high-detail.geojson.json > src/lib/components/maps/world.topojson.json; rm src/lib/components/maps/*.geojson.json"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.3",
		"@playwright/test": "^1.45.3",
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.6",
		"@types/d3": "^7.4.3",
		"@types/d3-geo": "^3.1.0",
		"@types/geojson": "^7946.0.15",
		"@types/node": "^22.10.2",
		"@types/topojson-client": "^3.1.5",
		"@vitest/ui": "^2.1.8",
		"autoprefixer": "^10.4.20",
		"bits-ui": "1.0.0-next.74",
		"clsx": "^2.1.1",
		"concurrently": "^9.1.0",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"jsdom": "^25.0.1",
		"lucide-svelte": "^0.469.0",
		"openapi-typescript": "^7.4.4",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.3.0",
		"tailwindcss": "^3.4.9",
		"tailwindcss-animate": "^1.0.7",
		"topojson-server": "^3.0.1",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^6.0.5",
		"vitest": "^2.1.8"
	},
	"overrides": {
		"@polka/url": "1.0.0-next.28"
	},
	"dependencies": {
		"d3": "^7.9.0",
		"d3-geo": "^3.1.1",
		"openapi-fetch": "^0.13.3",
		"topojson-client": "^3.1.0"
	}
}
