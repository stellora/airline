{
	"json.schemas": [
		{
			"fileMatch": [
				"sqlc.json"
			],
			"url": "https://raw.githubusercontent.com/sqlc-dev/sqlc/refs/heads/main/internal/config/v_two.json"
		}
	],
	"files.exclude": {
		"**/*.openapi.ts": true
	},
	"amp.mcpServers": {
		"feature-flags": {
			"url": "http://localhost:7010/sse"
		}
	},
		"amp.hooks": [
		{
			"compatibilityDate": "2025-05-13",
			"id": "svelte5-syntax-guard",
			"on": {
				"event": "tool:pre-execute",
				"tool": "edit_file",
				"input.contains": "export let"
			},
			"action": {
				"type": "send-user-message",
				"message": "Always use Svelte 5 syntax (`let { ... } = $props()`) not `export let` (Svelte 4 syntax)"
			}
		},
	],
//	"amp.commands.allowlist": ["*"],
	"workbench.colorTheme": "Default Dark Modern",
	"vitest.disableWorkspaceWarning": true,
}

